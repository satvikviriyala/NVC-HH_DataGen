    "version": "1.0.0",
    "created_for": "NVC-HH dataset (OFNR extraction and hallucination mitigation)",
    "license": "research-use",
    "sources": [
        "CNVC pseudo-feelings / evaluative words lists",
        "Rosenberg NVC pedagogy: thoughts vs feelings",
        "User supplied research report: anti-hallucination inventory"
    ],
    "description": "Pseudo-feelings are evaluation/accusation words commonly written in the syntactic form of feelings but semantically encode judgments about others, blame, intent attribution, or narratives. They MUST NOT be output in the `feelings[]` field. They should trigger translation into verified true feelings + canonical universal needs.",
    "rules": {
        "pseudo_feelings_cannot_appear_in_feelings_output": true,
        "if_present_translate_to_true_feelings": true,
        "max_true_feelings_to_output": 4,
        "true_feelings_must_come_from": "ontologies/feelings_ontology.json",
        "canonical_needs_must_come_from": "ontologies/needs_ontology.json",
        "output_normalization": {
            "lowercase": true,
            "spaces_to_underscore": true,
            "strip_punctuation": true
        }
    },
    "conceptual_definition": {
        "pseudo_feeling": "A word/phrase that mimics a feeling but encodes a thought, accusation, judgment, interpretation, or narrative about an external agent.",
        "why_it_matters": "Treating pseudo-feelings as real feelings reinforces blame narratives and is a form of affective hallucination. NVC requires translating pseudo-feelings into true affective states and needs."
    },
    "syntactic_triggers": {
        "high_precision_markers": [
            "i feel that",
            "i feel like",
            "i feel as if",
            "i feel you",
            "i feel he",
            "i feel she",
            "i feel they",
            "i feel it is"
        ],
        "pattern_rules": [
            {
                "pattern": "i feel (that|like|as if) .*",
                "type": "judgment_clause_or_metaphor",
                "action": "translate_to_true_feelings_and_needs"
            },
            {
                "pattern": "i feel (you|he|she|they) .*",
                "type": "external_agent_attribution",
                "action": "translate_to_true_feelings_and_needs"
            },
            {
                "pattern": "i feel (ignored|manipulated|betrayed|attacked|abused|used)",
                "type": "classic_pseudo_feeling",
                "action": "translate_to_true_feelings_and_needs"
            }
        ]
    },
