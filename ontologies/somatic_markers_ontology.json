{
    "name": "somatic_markers_ontology",
    "version": "1.0.0",
    "created_for": "NVC-HH dataset (OFNR extraction; affective grounding; hallucination mitigation)",
    "license": "research-use",
    "sources": [
        "NVC pedagogy: grounding feelings in body sensations",
        "User research report: Somatic Markers Inventory (Section 4)",
        "Affective computing conventions: arousal/valence mapping"
    ],
    "description": "Somatic markers are body sensations frequently co-occurring with emotional states. This ontology helps prevent inference hallucination by grounding affective interpretation in explicit bodily cues. Somatic markers are NOT feelings by default; they are physical sensation tokens. They can be used to support feeling inference and OFNR clarification requests.",
    "rules": {
        "somatic_markers_are_not_feelings": true,
        "somatic_markers_can_support_feelings_inference": true,
        "do_not_infer_feelings_without_evidence": true,
        "output_normalization": {
            "lowercase": true,
            "spaces_to_underscore": true,
            "strip_punctuation": true
        },
        "recommended_output_field": "metadata.somatic_markers",
        "max_somatic_markers_per_example": 6
    },
    "core_concepts": {
        "somatic_marker": "A physical sensation or body-based signal described in language (e.g., 'tight chest', 'knotted stomach', 'shaky hands').",
        "difference_from_feeling": "Feelings are emotional states; somatic markers are bodily correlates. Somatic markers can indicate arousal, stress, fear, or exhaustion but do not automatically imply a moral narrative.",
        "hallucination_risk": "Models may fabricate emotions; grounding via somatic cues reduces overconfident misclassification."
    },
    "structure": {
        "dimensions": [
            "modality",
            "intensity",
            "valence_hint"
        ],
        "modalities": [
            "tactile_texture",
            "temperature",
            "energy_flow",
            "visceral_internal",
            "cardio_respiratory",
            "musculoskeletal",
            "kinetic_motion",
            "neurological",
            "fatigue_energy",
            "spatial_expansion_constriction"
        ]
    },
    "output_schema_extension_recommendation": {
        "metadata": {
            "somatic_markers": [
                {
                    "marker": "string",
                    "modality": "string",
                    "intensity": "low|medium|high",
                    "evidence_span": "string",
                    "confidence": 0.0
                }
            ]
        }
    },
    "pattern_triggers": {
        "direct_body_patterns": [
            "my chest feels",
            "i feel it in my chest",
            "my stomach feels",
            "i have a knot in my stomach",
            "my throat feels",
            "my head feels",
            "i feel shaky",
            "my hands are shaking",
            "my heart is racing",
            "i can't breathe",
            "i feel numb",
            "i feel frozen",
            "i feel heavy",
            "i feel drained",
            "i feel exhausted"
        ],
        "regex_suggestions": [
            "(chest|throat|stomach|head|heart|hands|jaw|shoulders) (feels|felt|is) (tight|heavy|knotted|tense|shaky|numb|burning)",
            "(heart) (is )?(racing|pounding|fluttering)",
            "(breathing|breath) (is )?(shallow|tight|constricted)",
            "(stomach) (is )?(churning|knotted|twisting)",
            "(hands) (are )?(shaking|trembling|clammy)"
        ],
        "negation_patterns": [
            "not tired",
            "no pain",
            "not anxious",
            "i'm fine",
            "doesn't hurt"
        ],
        "negation_rule": "If negation patterns are present, reduce inference confidence; do not output contradictory somatic markers."
    },
    "modalities": {
        "tactile_texture": {
            "description": "Sensations on skin or surface quality.",
            "markers": {
                "low": [
                    "itchy",
                    "tingly",
                    "prickly",
                    "clammy",
                    "sticky"
                ],
                "medium": [
