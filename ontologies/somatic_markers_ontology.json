                    "sore",
                    "raw"
                ],
                "high": [
                    "piercing",
                    "burning",
                    "throbbing",
                    "electric_shock_like"
                ]
            },
            "mapping_guidance": {
                "likely_feelings": [
                    "anxious",
                    "afraid",
                    "overwhelmed",
                    "angry"
                ],
                "likely_needs": [
