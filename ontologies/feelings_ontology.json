{
    "name": "feelings_ontology",
    "version": "1.0.0",
    "created_for": "NVC-HH dataset (OFNR extraction and hallucination mitigation)",
    "license": "research-use",
    "sources": [
        "CNVC feelings lists (needs met / needs unmet)",
        "NVC pedagogy best practices (avoid pseudo-feelings)"
    ],
    "description": "Canonical verified feelings inventory. The labeler MUST choose feelings from this ontology only. Pseudo-feelings/evaluations are not allowed as feelings. Feelings are internal affective states independent of blame or external causation.",
    "rules": {
        "feelings_field_must_use_canonical_tokens": true,
        "max_feelings_per_example": 4,
        "output_normalization": {
            "lowercase": true,
            "spaces_to_underscore": true
        },
        "allowed_output_types": [
            "emotion",
            "mood",
            "affective_state",
            "somatic_affect"
        ],
        "not_allowed": [
            "pseudo_feelings",
            "judgments",
            "strategies",
            "external_agent_claims"
        ]
    },
    "core_definition": {
        "feeling": "An internal emotional or physical-affective state (e.g., sad, anxious, relieved).",
        "not_a_feeling": [
            "thoughts about others",
            "evaluations/judgments",
            "accusations",
            "moral labels",
            "participial adjectives implying an action done to you (e.g., ignored, manipulated, betrayed)"
        ]
    },
    "inventory_structure": {
        "valence": [
            "needs_met",
            "needs_unmet"
        ],
        "dimensions": [
            "arousal_low",
            "arousal_medium",
            "arousal_high"
        ],
        "clusters": [
            "connection_affection",
            "joy_vitality",
            "peace_contentment",
            "confidence_empowerment",
            "inspiration_awe",
            "fear_anxiety",
            "anger_aversion",
            "sadness_pain",
            "confusion_disorientation",
            "shame_embarrassment",
            "fatigue_burnout",
            "detachment_numbness"
        ]
    },
    "needs_met": {
        "connection_affection": {
            "description": "Feelings typically arising when connection/belonging/love needs are met.",
