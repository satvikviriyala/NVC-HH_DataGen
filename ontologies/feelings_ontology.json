    "explicit_exclusion": {
        "pseudo_feelings_reference_file": "ontologies/pseudo_feelings_lexicon.json",
        "disallowed_tokens": [
            "betrayed",
            "manipulated",
            "ignored",
            "abused",
            "attacked",
            "used",
            "disrespected",
            "unappreciated",
            "unwanted",
            "rejected",
            "cheated",
            "bullied",
            "wronged",
            "criticized",
            "judged"
        ],
        "note": "These are evaluations/pseudo-feelings and must be translated into true feelings (hurt/sad/afraid/angry/etc.)."
    },
    "not_feelings_patterns": [
        "i feel that",
        "i feel like",
        "i feel as if",
        "i feel you",
        "i feel he",
        "i feel she",
        "i feel they",
        "i feel it is"
    ],
    "translation_guidance_from_pseudo_feelings": {
        "manipulated": {
            "true_feelings_candidates": [
                "angry",
                "afraid",
                "confused"
            ],
            "notes": "Translate accusation into internal affect; map to autonomy/trust needs."
        },
        "betrayed": {
            "true_feelings_candidates": [
                "hurt",
                "sad",
                "angry"
            ],
            "notes": "Often indicates grief + broken trust."
        },
        "ignored": {
            "true_feelings_candidates": [
                "lonely",
                "hurt",
                "sad",
                "anxious"
            ],
            "notes": "Often indicates unmet belonging/connection."
        },
        "criticized": {
            "true_feelings_candidates": [
                "embarrassed",
                "ashamed",
                "hurt",
                "angry"
            ],
            "notes": "Often indicates unmet respect/competence."
        }
